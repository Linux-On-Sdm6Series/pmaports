package() {
	# Wifi
	install -Dm644 klte-common/proprietary/etc/wifi/bcmdhd_sta.bin \
		"$pkgdir"/lib/firmware/postmarketos/bcmdhd_sta.bin
	install -Dm644 klte-common/proprietary/etc/wifi/nvram_net.txt \
		"$pkgdir"/lib/firmware/postmarketos/nvram_net.txt
}

