url="https://github.com/TheMuppets/proprietary_vendor_samsung"
arch="armv7"
license="proprietary"
source="$pkgname-$pkgver.tar.gz::https://github.com/TheMuppets/proprietary_vendor_samsung/archive/$_commit.tar.gz"
