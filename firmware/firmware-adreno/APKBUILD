# Contributor: opendata26 <ctatlor97@gmail.com>
pkgname=firmware-adreno
pkgver=1
pkgrel=7
_commit="bf15795df1d1dcd61d37f6215c1eda47e669d54e"
pkgdesc="Firmware for adreno gpus"
url="https://github.com/TheMuppets/proprietary_vendor_sony"
arch="armhf aarch64 armv7"
license="proprietary"
source="$pkgname-$_commit.tar.gz::https://github.com/TheMuppets/proprietary_vendor_sony/archive/$_commit.tar.gz"
options="!check !archcheck !spdx"
builddir="$srcdir/proprietary_vendor_sony-$_commit"

_files1="a225_pm4.fw a225_pfp.fw a225p5_pm4.fw a330_pfp.fw a330_pm4.fw"
_files2="a420_pfp.fw a420_pm4.fw"

package() {
	for _i in $_files1; do
		install -Dm644 shinano-common/proprietary/etc/firmware/"$_i" \
			"$pkgdir"/lib/firmware/qcom/"$_i"
	done

	for _i in $_files2; do
		install -Dm644 ivy/proprietary/etc/firmware/"$_i" \
			"$pkgdir"/lib/firmware/qcom/"$_i"
	done
}

sha512sums="0cae1fa4954b34bd43df1742b1dd30aca11d9c2a93fbbfa2f226f3f6ad23bb9aad38cf5c8b6609fe407fa05e3730d1e737256b3834666deb0ee661f1a9d6ecb8  firmware-adreno-bf15795df1d1dcd61d37f6215c1eda47e669d54e.tar.gz"
